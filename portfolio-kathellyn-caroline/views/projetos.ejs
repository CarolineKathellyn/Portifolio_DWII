    </nav>

    <!-- Main Content -->
    <main class="pt-24 pb-12">
        <div class="max-w-7xl mx-auto px-4">
            
            <!-- Page Header -->
            <div class="text-center mb-16">
                <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
                    Meus Projetos
                </h1>
                <div class="w-32 h-1 bg-gradient-to-r from-pink-400 to-purple-500 mx-auto rounded-full mb-8"></div>
                <p class="text-xl text-pink-100 max-w-4xl mx-auto leading-relaxed">
                    <strong class="text-white"><%= projetos.length %> projetos acadêmicos</strong> que demonstram 
                    minha evolução técnica e aplicação prática dos conhecimentos adquiridos
                </p>
            </div>

            <!-- Project Statistics -->
            <div class="glass-effect p-8 rounded-2xl mb-16">
                <h2 class="text-3xl font-bold text-white text-center mb-8">
                    <i class="fas fa-chart-bar mr-3 text-blue-400"></i>
                    Estatísticas dos Projetos
                </h2>
                
                <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                    <!-- Projects Completed -->
                    <div class="text-center bg-white/5 p-6 rounded-xl hover:bg-white/10 transition-all duration-300 group">
                        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-r from-green-400 to-green-600 flex items-center justify-center floating-icon">
                            <i class="fas fa-check-circle text-white text-2xl"></i>
                        </div>
                        <div class="text-4xl font-bold text-green-300 mb-2"><%= projetos.length %></div>
                        <p class="text-green-100 font-semibold">Projetos Concluídos</p>
                    </div>

                    <!-- Technologies Used -->
                    <div class="text-center bg-white/5 p-6 rounded-xl hover:bg-white/10 transition-all duration-300 group">
                        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-r from-purple-400 to-purple-600 flex items-center justify-center floating-icon" style="animation-delay: 0.5s;">
                            <i class="fas fa-cogs text-white text-2xl"></i>
                        </div>
                        <div class="text-4xl font-bold text-purple-300 mb-2">11</div>
                        <p class="text-purple-100 font-semibold">Tecnologias Utilizadas</p>
                    </div>

                    <!-- Experience Months -->
                    <div class="text-center bg-white/5 p-6 rounded-xl hover:bg-white/10 transition-all duration-300 group">
                        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-r from-blue-400 to-blue-600 flex items-center justify-center floating-icon" style="animation-delay: 1s;">
                            <i class="fas fa-calendar-alt text-white text-2xl"></i>
                        </div>
                        <div class="text-4xl font-bold text-blue-300 mb-2">18</div>
                        <p class="text-blue-100 font-semibold">Meses de Experiência</p>
                    </div>

                    <!-- Success Rate -->
                    <div class="text-center bg-white/5 p-6 rounded-xl hover:bg-white/10 transition-all duration-300 group">
                        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-r from-pink-400 to-pink-600 flex items-center justify-center floating-icon" style="animation-delay: 1.5s;">
                            <i class="fas fa-trophy text-white text-2xl"></i>
                        </div>
                        <div class="text-4xl font-bold text-pink-300 mb-2">100%</div>
                        <p class="text-pink-100 font-semibold">Taxa de Entrega</p>
                    </div>
                </div>
            </div>

            <!-- Projects Grid -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
                <% projetos.forEach((projeto, index) => { 
                    // Determinar ícone do projeto
                    let projectIcon = 'fas fa-code';
                    let iconColor = 'from-blue-400 to-blue-600';
                    
                    if (projeto.titulo.includes('Estoque') || projeto.titulo.includes('ProStock')) {
                        projectIcon = 'fas fa-boxes';
                        iconColor = 'from-orange-400 to-orange-600';
                    } else if (projeto.titulo.includes('Agricultura') || projeto.titulo.includes('GreenTECH')) {
                        projectIcon = 'fas fa-seedling';
                        iconColor = 'from-green-400 to-green-600';
                    } else if (projeto.titulo.includes('ChatBot') || projeto.titulo.includes('IA')) {
                        projectIcon = 'fas fa-robot';
                        iconColor = 'from-purple-400 to-purple-600';
                    } else if (projeto.titulo.includes('Ponto') || projeto.titulo.includes('NectoPoint')) {
                        projectIcon = 'fas fa-clock';
                        iconColor = 'from-blue-400 to-blue-600';
                    }
                %>
