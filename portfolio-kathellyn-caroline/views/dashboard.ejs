<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Portfólio Kathellyn Caroline</title>
    <meta name="description" content="Dashboard com estatísticas do portfólio acadêmico">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #ec4899, #8b5cf6, #3b82f6);
            animation: gradient 15s ease infinite;
            background-size: 300% 300%;
        }
        
        @keyframes gradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        
        .glass-effect {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .stat-card {
            transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
            opacity: 0;
            transform: translateY(30px);
            animation: fadeInUp 0.8s ease-out forwards;
        }
        
        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .pulse-ring {
            animation: pulseRing 2s cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite;
        }

        @keyframes pulseRing {
            0% {
                transform: scale(0.8);
                opacity: 1;
            }
            100% {
                transform: scale(1.4);
                opacity: 0;
            }
        }

        .chart-bar {
            transition: width 1.5s ease-out;
        }
    </style>
</head>
<body class="min-h-screen gradient-bg">
    <!-- Navigation Bar -->
    <nav class="glass-effect fixed top-0 w-full z-50">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <!-- Logo/Brand -->
                <div class="text-white font-bold text-xl">
                    <a href="/" class="hover:text-pink-200 transition-colors duration-300 flex items-center">
                        <i class="fas fa-code mr-2"></i>
                        KC Portfolio
                    </a>
                </div>
                
                <!-- Desktop Navigation -->
                <div class="hidden md:flex space-x-6">
                    <a href="/" class="text-white hover:text-pink-200 hover:bg-white/10 px-4 py-2 rounded-full transition-all duration-300">
                        <i class="fas fa-home mr-2"></i>Início
                    </a>
                    <a href="/sobre" class="text-white hover:text-pink-200 hover:bg-white/10 px-4 py-2 rounded-full transition-all duration-300">
                        <i class="fas fa-user mr-2"></i>Sobre
                    </a>
                    <a href="/disciplinas" class="text-white hover:text-pink-200 hover:bg-white/10 px-4 py-2 rounded-full transition-all duration-300">
                        <i class="fas fa-book mr-2"></i>Disciplinas
                    </a>
                    <a href="/projetos" class="text-white hover:text-pink-200 hover:bg-white/10 px-4 py-2 rounded-full transition-all duration-300">
                        <i class="fas fa-folder-open mr-2"></i>Projetos
                    </a>
                    <a href="/dashboard" class="text-white bg-white/20 px-4 py-2 rounded-full font-semibold transition-all duration-300">
                        <i class="fas fa-chart-line mr-2"></i>Dashboard
                    </a>
                    <a href="/contato" class="text-white hover:text-pink-200 hover:bg-white/10 px-4 py-2 rounded-full transition-all duration-300">
                        <i class="fas fa-envelope mr-2"></i>Contato
                    </a>
                </div>
                
                <!-- Mobile Menu Button -->
                <button id="mobile-menu-btn" class="md:hidden text-white hover:text-pink-200">
                    <i class="fas fa-bars text-xl"></i>
                </button>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-24 pb-12">
        <div class="max-w-7xl mx-auto px-4">
            
            <!-- Page Header -->
            <div class="text-center mb-16">
                <div class="mb-8">
                    <i class="fas fa-chart-pie text-6xl text-white animate-pulse"></i>
                </div>
                <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
                    Dashboard Acadêmico
                </h1>
                <div class="w-32 h-1 bg-gradient-to-r from-pink-400 to-purple-500 mx-auto rounded-full mb-8"></div>
                <p class="text-xl text-pink-100 max-w-4xl mx-auto leading-relaxed">
                    Visão geral das <strong class="text-white">estatísticas</strong> e 
                    <strong class="text-white">métricas</strong> do meu portfólio acadêmico
                </p>
            </div>

            <!-- Main Statistics Grid -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
                
                <!-- Total Disciplines Card -->
                <div class="stat-card glass-effect p-8 rounded-2xl hover:scale-105 transition-transform duration-300" style="animation-delay: 0.1s;">
                    <div class="text-center">
                        <div class="relative w-24 h-24 mx-auto mb-6">
                            <div class="absolute inset-0 bg-pink-400 rounded-full pulse-ring"></div>
                            <div class="relative w-full h-full rounded-full bg-gradient-to-r from-pink-400 to-pink-600 flex items-center justify-center">
                                <i class="fas fa-graduation-cap text-white text-3xl"></i>
                            </div>
                        </div>
                        <h3 class="text-white font-semibold text-lg mb-2">Total de Disciplinas</h3>
                        <div class="text-5xl font-bold text-pink-300 mb-2">
                            <%= estatisticas.totalDisciplinas %>
                        </div>
                        <p class="text-pink-200 text-sm">Disciplinas cursadas e em andamento</p>
                        
                        <!-- Mini Progress -->
                        <div class="mt-6">
                            <div class="w-full bg-white/10 rounded-full h-2">
                                <div class="chart-bar bg-gradient-to-r from-pink-400 to-pink-600 h-2 rounded-full" style="width: 100%"></div>
                            </div>
                            <p class="text-pink-300 text-xs mt-2">100% do currículo em progresso</p>
                        </div>
                    </div>
                </div>

                <!-- Completed Projects Card -->
                <div class="stat-card glass-effect p-8 rounded-2xl hover:scale-105 transition-transform duration-300" style="animation-delay: 0.2s;">
                    <div class="text-center">
                        <div class="relative w-24 h-24 mx-auto mb-6">
                            <div class="absolute inset-0 bg-purple-400 rounded-full pulse-ring" style="animation-delay: 0.5s;"></div>
                            <div class="relative w-full h-full rounded-full bg-gradient-to-r from-purple-400 to-purple-600 flex items-center justify-center">
                                <i class="fas fa-project-diagram text-white text-3xl"></i>
                            </div>
                        </div>
                        <h3 class="text-white font-semibold text-lg mb-2">Projetos Concluídos</h3>
                        <div class="text-5xl font-bold text-purple-300 mb-2">
                            <%= estatisticas.projetosConcluidos %>
                        </div>
                        <p class="text-purple-200 text-sm">Projetos acadêmicos finalizados</p>
                        
                        <!-- Mini Progress -->
                        <div class="mt-6">
                            <div class="w-full bg-white/10 rounded-full h-2">
                                <div class="chart-bar bg-gradient-to-r from-purple-400 to-purple-600 h-2 rounded-full" style="width: 100%"></div>
                            </div>
                            <p class="text-purple-300 text-xs mt-2">Taxa de conclusão: 100%</p>
                        </div>
                    </div>
                </div>

                <!-- Technologies Card -->
                <div class="stat-card glass-effect p-8 rounded-2xl hover:scale-105 transition-transform duration-300" style="animation-delay: 0.3s;">
                    <div class="text-center">
                        <div class="relative w-24 h-24 mx-auto mb-6">
                            <div class="absolute inset-0 bg-blue-400 rounded-full pulse-ring" style="animation-delay: 1s;"></div>
                            <div class="relative w-full h-full rounded-full bg-gradient-to-r from-blue-400 to-blue-600 flex items-center justify-center">
                                <i class="fas fa-code text-white text-3xl"></i>
                            </div>
                        </div>
                        <h3 class="text-white font-semibold text-lg mb-2">Tecnologias Dominadas</h3>
                        <div class="text-5xl font-bold text-blue-300 mb-2">
                            <%= estatisticas.tecnologiasUsadas.length %>
                        </div>
                        <p class="text-blue-200 text-sm">Stack tecnológico completo</p>
                        
                        <!-- Mini Progress -->
                        <div class="mt-6">
                            <div class="w-full bg-white/10 rounded-full h-2">
                                <div class="chart-bar bg-gradient-to-r from-blue-400 to-blue-600 h-2 rounded-full" style="width: <%= (estatisticas.tecnologiasUsadas.length / 15) * 100 %>%"></div>
                            </div>
                            <p class="text-blue-300 text-xs mt-2">Nível avançado em todas</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Technologies List -->
            <div class="mb-16">
                <div class="glass-effect p-8 rounded-2xl">
                    <h2 class="text-3xl font-bold text-white mb-8 flex items-center justify-center">
                        <i class="fas fa-tools mr-3 text-yellow-400"></i>
                        Tecnologias Mais Usadas
                    </h2>
                    
                    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                        <% estatisticas.tecnologiasUsadas.forEach((tech, index) => { %>
                            <div class="bg-white/5 p-6 rounded-xl hover:bg-white/10 transition-all duration-300 text-center border border-white/10 hover:border-white/30" style="animation: fadeInUp 0.5s ease-out <%= index * 0.1 %>s both;">
                                <div class="text-4xl mb-3">
                                    <% if (tech === 'Python') { %>
                                        <i class="fab fa-python text-blue-400"></i>
                                    <% } else if (tech === 'Java') { %>
                                        <i class="fab fa-java text-red-500"></i>
                                    <% } else if (tech === 'JavaScript') { %>
                                        <i class="fab fa-js-square text-yellow-400"></i>
                                    <% } else if (tech === 'Node.js') { %>
                                        <i class="fab fa-node-js text-green-500"></i>
                                    <% } else if (tech === 'React Native') { %>
                                        <i class="fab fa-react text-cyan-400"></i>
                                    <% } else { %>
                                        <i class="fas fa-database text-purple-400"></i>
                                    <% } %>
                                </div>
                                <h3 class="text-white font-semibold mb-2"><%= tech %></h3>
                                <div class="w-full bg-white/10 rounded-full h-1 mt-3">
                                    <div class="bg-gradient-to-r from-pink-400 to-purple-500 h-1 rounded-full" style="width: <%= 70 + Math.random() * 30 %>%"></div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!-- Detailed Statistics -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
                
                <!-- Disciplines Distribution -->
                <div class="glass-effect p-8 rounded-2xl">
                    <h3 class="text-2xl font-bold text-white mb-6 flex items-center">
                        <i class="fas fa-chart-bar mr-3 text-green-400"></i>
                        Distribuição de Disciplinas
                    </h3>
                    
                    <div class="space-y-6">
                        <div>
                            <div class="flex justify-between items-center mb-2">
                                <span class="text-white font-semibold">Desenvolvimento</span>
                                <span class="text-pink-300 font-bold">40%</span>
                            </div>
                            <div class="w-full bg-white/10 rounded-full h-4">
                                <div class="chart-bar bg-gradient-to-r from-pink-400 to-pink-600 h-4 rounded-full flex items-center justify-end pr-2" style="width: 40%">
                                    <span class="text-white text-xs font-bold"><%= Math.ceil(estatisticas.totalDisciplinas * 0.4) %></span>
                                </div>
                            </div>
                        </div>

                        <div>
                            <div class="flex justify-between items-center mb-2">
                                <span class="text-white font-semibold">Banco de Dados</span>
                                <span class="text-green-300 font-bold">20%</span>
                            </div>
                            <div class="w-full bg-white/10 rounded-full h-4">
                                <div class="chart-bar bg-gradient-to-r from-green-400 to-green-600 h-4 rounded-full flex items-center justify-end pr-2" style="width: 20%">
                                    <span class="text-white text-xs font-bold"><%= Math.ceil(estatisticas.totalDisciplinas * 0.2) %></span>
                                </div>
                            </div>
                        </div>

                        <div>
                            <div class="flex justify-between items-center mb-2">
                                <span class="text-white font-semibold">Fundamentos</span>
                                <span class="text-purple-300 font-bold">25%</span>
                            </div>
                            <div class="w-full bg-white/10 rounded-full h-4">
                                <div class="chart-bar bg-gradient-to-r from-purple-400 to-purple-600 h-4 rounded-full flex items-center justify-end pr-2" style="width: 25%">
                                    <span class="text-white text-xs font-bold"><%= Math.ceil(estatisticas.totalDisciplinas * 0.25) %></span>
                                </div>
                            </div>
                        </div>

                        <div>
                            <div class="flex justify-between items-center mb-2">
                                <span class="text-white font-semibold">Gestão e Soft Skills</span>
                                <span class="text-blue-300 font-bold">15%</span>
                            </div>
                            <div class="w-full bg-white/10 rounded-full h-4">
                                <div class="chart-bar bg-gradient-to-r from-blue-400 to-blue-600 h-4 rounded-full flex items-center justify-end pr-2" style="width: 15%">
                                    <span class="text-white text-xs font-bold"><%= Math.ceil(estatisticas.totalDisciplinas * 0.15) %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Projects by Category -->
                <div class="glass-effect p-8 rounded-2xl">
                    <h3 class="text-2xl font-bold text-white mb-6 flex items-center">
                        <i class="fas fa-folder-open mr-3 text-orange-400"></i>
                        Projetos por Categoria
                    </h3>
                    
                    <div class="space-y-4">
                        <% projetos.forEach((projeto, index) => { %>
                            <div class="bg-white/5 p-4 rounded-xl hover:bg-white/10 transition-all duration-300 border-l-4 border-pink-400">
                                <h4 class="text-white font-semibold mb-2"><%= projeto.titulo %></h4>
                                <div class="flex flex-wrap gap-2 mb-2">
                                    <% projeto.tecnologias.slice(0, 3).forEach(tech => { %>
                                        <span class="bg-white/10 text-pink-200 px-2 py-1 rounded text-xs">
                                            <%= tech %>
                                        </span>
                                    <% }); %>
                                    <% if (projeto.tecnologias.length > 3) { %>
                                        <span class="bg-white/10 text-pink-200 px-2 py-1 rounded text-xs">
                                            +<%= projeto.tecnologias.length - 3 %>
                                        </span>
                                    <% } %>
                                </div>
                                <div class="flex items-center text-green-300 text-sm">
                                    <i class="fas fa-check-circle mr-2"></i>
                                    <span>Concluído</span>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!-- Summary Cards -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-16">
                <div class="glass-effect p-6 rounded-xl text-center hover:scale-105 transition-transform duration-300">
                    <i class="fas fa-clock text-4xl text-yellow-400 mb-3"></i>
                    <div class="text-2xl font-bold text-white mb-1">18+</div>
                    <p class="text-yellow-200 text-sm">Meses de Experiência</p>
                </div>

                <div class="glass-effect p-6 rounded-xl text-center hover:scale-105 transition-transform duration-300">
                    <i class="fas fa-trophy text-4xl text-yellow-500 mb-3"></i>
                    <div class="text-2xl font-bold text-white mb-1">100%</div>
                    <p class="text-yellow-200 text-sm">Taxa de Sucesso</p>
                </div>

                <div class="glass-effect p-6 rounded-xl text-center hover:scale-105 transition-transform duration-300">
                    <i class="fas fa-star text-4xl text-pink-400 mb-3"></i>
                    <div class="text-2xl font-bold text-white mb-1">A+</div>
                    <p class="text-pink-200 text-sm">Média Acadêmica</p>
                </div>

                <div class="glass-effect p-6 rounded-xl text-center hover:scale-105 transition-transform duration-300">
                    <i class="fas fa-certificate text-4xl text-purple-400 mb-3"></i>
                    <div class="text-2xl font-bold text-white mb-1">5+</div>
                    <p class="text-purple-200 text-sm">Certificações</p>
                </div>
            </div>

            <!-- Call to Action -->
            <div class="text-center">
                <div class="glass-effect p-12 rounded-2xl">
                    <h3 class="text-3xl font-bold text-white mb-6">
                        Explore Mais Detalhes
                    </h3>
                    <p class="text-xl text-pink-100 mb-8 max-w-3xl mx-auto">
                        Veja as disciplinas completas, detalhes dos projetos ou entre em contato
                    </p>
                    
                    <div class="flex flex-col md:flex-row gap-4 justify-center">
                        <a href="/disciplinas" 
                           class="bg-gradient-to-r from-pink-500 to-purple-600 hover:from-pink-600 hover:to-purple-700 px-8 py-4 rounded-full text-white font-bold transition-all duration-300 transform hover:scale-105 shadow-lg">
                            <i class="fas fa-book mr-2"></i>Ver Disciplinas
                        </a>
                        <a href="/projetos" 
                           class="glass-effect hover:bg-white/20 px-8 py-4 rounded-full text-white font-bold transition-all duration-300 transform hover:scale-105">
                            <i class="fas fa-folder-open mr-2"></i>Ver Projetos
                        </a>
                        <a href="/contato" 
                           class="glass-effect hover:bg-white/20 px-8 py-4 rounded-full text-white font-bold transition-all duration-300 transform hover:scale-105">
                            <i class="fas fa-envelope mr-2"></i>Entrar em Contato
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="glass-effect py-8 mt-16">
        <div class="container mx-auto px-4 text-center text-white">
            <p>&copy; 2025 Kathellyn Caroline Alves dos Santos. Todos os direitos reservados.</p>
            <p class="text-sm text-pink-200 mt-2">
                Desenvolvido com <i class="fas fa-heart text-red-400"></i> usando Node.js, Express e EJS
            </p>
        </div>
    </footer>

    <!-- JavaScript -->
    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-btn').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });

        // Animate progress bars on scroll
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const bars = entry.target.querySelectorAll('.chart-bar');
                    bars.forEach(bar => {
                        const width = bar.style.width;
                        bar.style.width = '0%';
                        setTimeout(() => {
                            bar.style.width = width;
                        }, 100);
                    });
                }
            });
        });

        document.querySelectorAll('.glass-effect').forEach(el => {
            observer.observe(el);
        });

        // Initialize animations
        window.addEventListener('load', function() {
            document.querySelectorAll('.stat-card').forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 200);
            });
        });
    </script>
</body>
</html>